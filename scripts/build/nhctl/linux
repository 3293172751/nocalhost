#!/usr/bin/env bash
#
# Build an osx binary from linux
#

set -eu -o pipefail

export GOOS=linux
export GOARCH=amd64

source ./scripts/build/nhctl/.variables

# Override TARGET
TARGET="build/nhctl-$GOOS-$GOARCH"

git clone https://github.com/nocalhost/syncthing.git
cd syncthing
go run build.go -targetName=syncthing -nocalhostVersion="${VERSION}" -nocalhostCommitId="${GITCOMMIT}"
mv bin/syncthing ./../internal/nhctl/syncthing/bin/syncthing_linux_amd64 || true
COPY bin/syncthing ./../internal/nhctl/syncthing/bin/syncthing_linux_amd64 || true
cd ..
rm -fr syncthing || true
rmdir /s/q syncthing || true

echo "Building $TARGET"
go build -o "${TARGET}" --ldflags "${LDFLAGS}" "${SOURCE}"
